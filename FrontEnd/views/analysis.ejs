<% include ./partials/header %>
<title>Analysis</title>
</head>
<div class="ui main text container segment">
    <div class="ui huge header"><%= analysis.title %></div>
    <div class="ui top attached ">
        <div class="item">
            <img class="ui centered rounded image" src="<%= analysis.Market %>" >
            <div class="content">
                <span><%= analysis.created.toDateString() %></span>
            </div>
            <div class="description">
                <p><%- analysis.Thought %></p>
            </div>
            <a class="ui orange basic button" href="/analysis/<%= analysis._id %>/edit">Edit</a>
            <form id="delete" action="/analysis/<%= analysis._id %>?_method=DELETE" method="POST">
                <button class="ui red basic button">Delete</button>
            </form>
        </div>
    </div>
    
</div>
<% include ./partials/footer %>

